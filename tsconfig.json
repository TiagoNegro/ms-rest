{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    "target": "es2019",                                  
    "module": "commonjs",                                
    "moduleResolution": "node",
    "rootDir": "src",                                  
    "outDir": "./dist",   
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "removeComments": true,
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,          
    "strict": true,          
    "skipLibCheck": true    
  }
}
